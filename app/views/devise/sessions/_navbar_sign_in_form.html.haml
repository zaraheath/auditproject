= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "navbar-form navbar-right"}) do |f|
  .form-group= f.email_field :email, placeholder: t("users.email"), class: "form-control"
  .form-group= f.password_field :password, placeholder: t("users.password"), class: "form-control"
  = f.submit t("buttons.sign_in"), class: "btn btn-success"