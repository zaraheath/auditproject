- if user_signed_in?
  %ul.nav.navbar-nav.navbar-right
    %li= link_to t("users.edit_account"), edit_user_registration_path
    %li= link_to t("users.logout"), destroy_user_session_path, :method=>'delete'
- else
  %ul.nav.navbar-nav.navbar-right
    %li= link_to t("users.sign_up"), new_user_registration_path
  = form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "navbar-form navbar-right"}) do |f|
    .form-group= f.email_field :email, placeholder: t("users.email"), class: "form-control"
    .form-group= f.password_field :password, placeholder: t("users.password"), class: "form-control"
    .form-group= f.submit t("buttons.sign_in"), class: "btn btn-success"
